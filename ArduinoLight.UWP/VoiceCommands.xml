<?xml version="1.0" encoding="utf-8"?>
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">
  <CommandSet xml:lang="en-us" Name="ArduinoLight.UWP_en-us">
    <CommandPrefix>Light</CommandPrefix>
    <Example>Turn light on</Example>
    <Command Name="toggleLight">
      <Example>turn light on</Example>
      <ListenFor>turn light {action}</ListenFor>
      <Feedback>turning light {action}</Feedback>
      <Navigate/>
    </Command>
    <PhraseList Label="action">
      <Item>on</Item>
      <Item>off</Item>
    </PhraseList>
  </CommandSet>
</VoiceCommands>